@model iReadABook.Models.Book.SearchResultsViewModel

@{
    ViewBag.Title = "Search";
}

<div>
    @using (Html.BeginForm("Search","Book",FormMethod.Get,new {@class = "form-control"}))
    {
        @Html.TextBox("searchTerm")
        <input type="submit" name="submit" value="Go!" />
    }

    
</div>

<h2>Search for @Model.SearchTerm</h2>

@Html.Partial("_SearchResults",Model.Books)
